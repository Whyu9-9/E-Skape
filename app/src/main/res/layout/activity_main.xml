<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/nodata"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="0.5">
        <ImageView
            android:layout_marginTop="150dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/noda"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Oops...Belum ada data"
            android:textColor="@color/grey_200"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/bekgron"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@color/bluestrap"
                    tools:ignore="MissingConstraints,Orientation" >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ramdomart"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="75dp"
                    android:id="@+id/card_skp"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintTop_toTopOf="@+id/bekgron">
                    <LinearLayout
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/stud" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/card_welcome"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/softblack"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="14dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Jumlah Poin Kegiatanmu:"
                                    android:textColor="@color/grey_200"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="14dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/totalpoin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/bluestrap"
                                        android:textSize="40sp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="-7dp"
                                        android:layout_marginLeft="14dp"
                                        android:layout_marginBottom="15dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="/100"
                                        android:textColor="@color/bluestrap"
                                        android:textSize="15sp"
                                        android:layout_marginTop="-7dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="15dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <RelativeLayout
                android:id="@+id/rvLayout"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="List Kegiatanmu"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="25dp"
                    android:id="@+id/listKegiatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/list_skp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_margin="16dp"
        android:backgroundTint="@color/blueuk"
        android:contentDescription="Add" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>